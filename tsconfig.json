{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES6",
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "rootDir": ".",
        "noEmit": false,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "outDir": "./dist"
    },
    "include": [
        "src/**/**.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}